{% trans_default_domain 'prompts' %}

	<div class="modal-body">
{{ form_start(categoryForm) }}
		<div class="form-group row">
			<div class="col-sm-3">
				{{ form_label(categoryForm.name, 'form.denomination'|trans|capitalize, {'label_attr':{'class':'col-sm-2 col-form-label col-form-label-sm', 'for':'prodcategory_form_name'}} ) }}
			</div>
			<div class="col-sm-9">
				{{ form_widget(categoryForm.name ) }}
				<div id="err_name" class="modal-error-content"></div>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-3">
				{{ form_label(categoryForm.description, 'form.description'|trans|capitalize, {'label_attr':{'class':'col-sm-2 col-form-label col-form-label-sm', 'for':'prodcategory_form_name'}} ) }}
			</div>
			<div class="col-sm-9">
				{{ form_widget(categoryForm.description ) }}
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-3">
				{{ form_label(categoryForm.isActive, 'form.active.f'|trans|capitalize, {'label_attr':{'class':'col-sm-2 col-form-label col-form-label-sm', 'for':'prodcategory_form_name'}} ) }}
			</div>

			<div class="col-sm-9 from-check-box">
				{{ form_widget(categoryForm.isActive ) }}
			</div>
		</div>
{{ form_end(categoryForm) }}

		<div class="modal-footer">
			<button type="button" onclick="$('#dialog_form').submit();" class="btn btn-secondary">{{ 'button.save'|trans|capitalize }}</button>
		</div>
	</div>
