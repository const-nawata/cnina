{% extends 'layouts/base.twig' %}

{% trans_default_domain 'prompts' %}

{% block title %}{{ 'title.login'|trans|capitalize }}{% endblock %}

{% block body %}

<div class="container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }} </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{ 'title.sign-in'|trans|capitalize }}!</h1>

    <div class="form-group row required">

        <label class="col-sm-2 col-form-label" for="inputUsername">{{ 'form.username'|trans|capitalize }}</label>

        <div class="col-sm-10">
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus />
        </div>
    </div>

    <div class="form-group row required">
        <label class="col-sm-2 col-form-label" for="inputPassword" >Password</label>

        <div class="col-sm-10">
            <input type="password" name="password" id="inputPassword" class="form-control" required />
        </div>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">{{ 'button.sign-in'|trans|capitalize }}</button>
</form>
</div>
{% endblock %}

{#
placeholder="{{ 'form.password'|trans|capitalize }}"
placeholder="{{ 'form.username'|trans|capitalize }}"
#}
